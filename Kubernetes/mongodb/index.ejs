<!DOCTYPE html>
<html>
  <head>
    <title>Mongo DB</title>
  </head>
  <body>
    <form action="/update" method="post">
      <label for="name">Enter your name</label>
      <input id="name" name="name" type="text"> <br />
      <button type="submit">Submit</button>
    </form>
    <h2>Names:</h2>
    <ul>
      <% users.forEach(function(user) { %>
        <li><%= user.name %></li>
      <% }); %>
    </ul>
  </body>
</html>
